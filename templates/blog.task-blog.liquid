{% comment %}
  The contents of the blog.liquid template can be found in /sections/blog-template.liquid
  {% section 'blog-template' %}
{% endcomment %}

{% style %}
  h1 {
    text-align: center;
  }
  .article__items {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 20px;
  }
{% endstyle %}

<h1>{{ blog.title }}</h1>
<p>Articles count: {{ blog.articles_count }}</p>
<div class="article__items">
  {% for article in blog.articles %}
    <div class="articleItem">
      <a href="{{ article.url }}">
        <h2>{{ article.title }}</h2>
        <p>ID: {{ article.id }}</p>
        <img src="{{ article.image.src | img_url: '500x' }}" alt="{{ article.title }}">
      </a>
    </div>
  {% endfor %}
</div>
